{{#if loggedIn.signedIn}}
  <button type="button" class="button" {{action 'signOut'}}>Logout</button>
{{else}}
  <form {{action 'signIn' on='click'}}>
    <div class="form-group">
      <label for="name">Name:</label>
      {{input value=name required="required" class="form-control"}}
    </div>
    <button type="submit" class="btn">Login</button>
  </form>
{{/if}}
