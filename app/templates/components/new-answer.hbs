{{#if loggedIn.signedIn}}
  {{#if showForm.showNewAnswerForm}}
    <form {{action 'save' question on='submit'}}>
      <div class="form-group">
        <label for="content">Answer:</label>
        {{textarea value=content type="text" required="required" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="author">Name:</label>
        {{input value=author type="text" required="required" class="form-control"}}
      </div>
      <button class="btn">Submit Answer</button>
    </form>
  {{/if}}
{{/if}}
