{{#if showForm.showNewAnswerForm}}
  <form {{action 'save' question on='submit'}}>
    <div class="form-group">
      <label for="content">Answer:</label>
      {{input value=content type="text" required="required"}}
    </div>
    <div class="form-group">
      <label for="author">Name:</label>
      {{input value=author type="text" required="required"}}
    </div>
    <button class="btn">Submit Answer</button>
  </form>
{{else}}
  <button class="btn" {{action 'showAnswerForm'}}>Answer</button>
{{/if}}
