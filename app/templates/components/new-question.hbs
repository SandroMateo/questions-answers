{{log loggedIn.signedIn}}
{{#if loggedIn.signedIn}}
  <button id="ask" class="btn" {{action 'showNewQuestion'}}>Ask A Question!</button>
  {{#if showForm.showNewQuestionForm}}
    <h4>New Question: </h4>
    <form {{action 'save' on='submit'}}>
      <div class="form-group">
        <label for="content">Question:</label>
        {{textarea value=content type="text" required="required" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="notes">Additional Notes:</label>
        {{input value=notes type="text" required="required" class="form-control"}}
      </div>
      <button class="btn">Ask</button>
    </form>
  {{/if}}
{{else}}
  <h3>Login to ask a question!</h3>
{{/if}}
